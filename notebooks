      "source": [
        "\n",
        "# Imports & plotting setup\n",
        "import math\n",
        "import numpy as np\n",
        "import matplotlib\n",
        "import matplotlib.pyplot as plt\n",
        "from pathlib import Path\n",
        "\n",
        "# Figure settings\n",
        "matplotlib.rcParams['figure.dpi'] = 130\n",
        "matplotlib.rcParams['font.family'] = 'DejaVu Sans'\n",
        "plt.rcParams['axes.unicode_minus'] = False\n",
        "\n",
        "# Output folder for figures\n",
        "out_dir = Path('figs_en')\n",
        "out_dir.mkdir(exist_ok=True)\n",
        "print('Setup OK')\n"
      ]
    },
    {
      "cell_type": "code",
      "metadata": {},
      "execution_count": null,
      "outputs": [],
      "source": [
        "\n",
        "# --- Love-OS Mathematical Model ---\n",
        "# Physical constants\n",
        "k_B = 1.380649e-23  # Boltzmann constant [J/K]\n",
        "ln2 = math.log(2.0)\n",
        "\n",
        "# Default parameters (tune as needed)\n",
        "params = {\n",
        "    'B': 1.0e6,          # Bandwidth [bits/s]\n",
        "    'SNR0': 20.0,        # SNR at R=0 (linear ratio)\n",
        "    'beta': 0.5,         # Sensitivity of SNR to R\n",
        "    'kappa': 0.9,        # Capacity -> throughput efficiency\n",
        "    'alpha': 0.8,        # Input -> output gain\n",
        "    'rho': 0.6,          # Linear attenuation by R\n",
        "    'delta': 0.7,        # Weight of channel capacity\n",
        "    'V': 1.0,            # Input potential (normalized)\n",
        "    'E_in': 500.0,       # Input energy [J]\n",
        "    'T': 300.0,          # Effective temperature [K]\n",
        "    'gamma': 1.0,        # Avg. erased bits per unit R\n",
        "    'L0': 0.2,           # Base latency [s]\n",
        "    'theta': 0.5         # Latency sensitivity [s/arb]\n",
        "}\n",
        "\n",
        "def SNR(R, SNR0=params['SNR0'], beta=params['beta']):\n",
        "    return SNR0 * math.exp(-beta * R)\n",
        "\n",
        "def capacity(B, R):\n",
        "    return B * math.log2(1.0 + SNR(R))\n",
        "\n",
        "def throughput(V, R):\n",
        "    C = capacity(params['B'], R)\n",
        "    return (params['alpha'] * V) / (1.0 + params['rho'] * R) * (max(C, 1e-12))**params['delta']\n",
        "\n",
        "def E_loss(R):\n",
        "    return k_B * params['T'] * ln2 * (params['gamma'] * R)\n",
        "\n",
        "def efficiency(E_in, R):\n",
        "    return 1.0 - E_loss(R) / max(E_in, 1e-9)\n",
        "\n",
        "def latency(R):\n",
        "    return params['L0'] + params['theta'] * R\n",
        "\n",
        "print('Model defined.')\n"
      ]
    },
    {
      "cell_type": "code",
      "metadata": {},
      "execution_count": null,
      "outputs": [],
      "source": [
        "\n",
        "# --- Baseline curves ---\n",
        "R_vals = np.linspace(0, 5, 200)\n",
        "I_vals = np.array([throughput(params['V'], r) for r in R_vals])\n",
        "eta_vals = np.array([efficiency(params['E_in'], r) for r in R_vals])\n",
        "L_vals = np.array([latency(r) for r in R_vals])\n",
        "\n",
        "fig, axes = plt.subplots(1, 3, figsize=(12, 3.5))\n",
        "axes[0].plot(R_vals, I_vals, color='C0')\n",
        "axes[0].set_title('Throughput I(R)')\n",
        "axes[0].set_xlabel('R (ego-resistance, arbitrary units)')\n",
        "axes[0].set_ylabel('I (normalized output)')\n",
        "axes[0].grid(True, alpha=0.3)\n",
        "\n",
        "axes[1].plot(R_vals, eta_vals, color='C1')\n",
        "axes[1].set_title('Efficiency η(R)')\n",
        "axes[1].set_xlabel('R')\n",
        "axes[1].set_ylabel('η (0–1)')\n",
        "axes[1].grid(True, alpha=0.3)\n",
        "\n",
        "axes[2].plot(R_vals, L_vals, color='C2')\n",
        "axes[2].set_title('Latency L(R)')\n",
        "axes[2].set_xlabel('R')\n",
        "axes[2].set_ylabel('L (seconds)')\n",
        "axes[2].grid(True, alpha=0.3)\n",
        "\n",
        "plt.tight_layout()\n",
        "plt.savefig(out_dir / 'baseline_curves_en.png', bbox_inches='tight')\n",
        "print('baseline_curves_en.png saved')\n",
        "fig\n"
      ]
    },
    {
      "cell_type": "code",
      "metadata": {},
      "execution_count": null,
      "outputs": [],
      "source": [
        "\n",
        "# --- Sensitivity analysis: beta, rho ---\n",
        "beta_list = [0.2, 0.5, 0.8, 1.2]\n",
        "rho_list = [0.0, 0.4, 0.8, 1.2]\n",
        "\n",
        "fig, axes = plt.subplots(1, 2, figsize=(10, 3.5))\n",
        "for b in beta_list:\n",
        "    params['beta'] = b\n",
        "    I_b = np.array([throughput(params['V'], r) for r in R_vals])\n",
        "    axes[0].plot(R_vals, I_b, label=f'beta={b}')\n",
        "axes[0].set_title('Effect of beta on I(R)')\n",
        "axes[0].set_xlabel('R')\n",
        "axes[0].set_ylabel('I')\n",
        "axes[0].legend()\n",
        "axes[0].grid(True, alpha=0.3)\n",
        "\n",
        "# rho sensitivity (reset beta)\n",
        "params['beta'] = 0.5\n",
        "for rpar in rho_list:\n",
        "    params['rho'] = rpar\n",
        "    I_rho = np.array([throughput(params['V'], r) for r in R_vals])\n",
        "    axes[1].plot(R_vals, I_rho, label=f'rho={rpar}')\n",
        "axes[1].set_title('Effect of rho on I(R)')\n",
        "axes[1].set_xlabel('R')\n",
        "axes[1].set_ylabel('I')\n",
        "axes[1].legend()\n",
        "axes[1].grid(True, alpha=0.3)\n",
        "\n",
        "plt.tight_layout()\n",
        "plt.savefig(out_dir / 'sensitivity_I_en.png', bbox_inches='tight')\n",
        "print('sensitivity_I_en.png saved')\n",
        "fig\n",
        "\n",
        "# Restore defaults\n",
        "params['rho'] = 0.6\n",
        "params['beta'] = 0.5\n"
      ]
    },
    {
      "cell_type": "code",
      "metadata": {},
      "execution_count": null,
      "outputs": [],
      "source": [
        "\n",
        "# --- A/B experiment simulation ---\n",
        "np.random.seed(42)\n",
        "N = 200\n",
        "# Group A (Ego-promoting): R ~ Normal(2.5, 0.6)\n",
        "R_A = np.clip(np.random.normal(2.5, 0.6, N), 0, None)\n",
        "# Group B (Ego-minimizing): R ~ Normal(0.8, 0.4)\n",
        "R_B = np.clip(np.random.normal(0.8, 0.4, N), 0, None)\n",
        "\n",
        "I_A = np.array([throughput(params['V'], r) for r in R_A])\n",
        "I_B = np.array([throughput(params['V'], r) for r in R_B])\n",
        "eta_A = np.array([efficiency(params['E_in'], r) for r in R_A])\n",
        "eta_B = np.array([efficiency(params['E_in'], r) for r in R_B])\n",
        "L_A = np.array([latency(r) for r in R_A])\n",
        "L_B = np.array([latency(r) for r in R_B])\n",
        "\n",
        "def summary(name, arr):\n",
        "    return f\"{name}: mean={arr.mean():.4f}, std={arr.std():.4f}\"\n",
        "\n",
        "print(summary('I_A', I_A))\n",
        "print(summary('I_B', I_B))\n",
        "print(summary('eta_A', eta_A))\n",
        "print(summary('eta_B', eta_B))\n",
        "print(summary('L_A', L_A))\n",
        "print(summary('L_B', L_B))\n",
        "\n",
        "fig, axes = plt.subplots(1, 3, figsize=(12, 3.5))\n",
        "axes[0].boxplot([I_A, I_B], labels=['A: Ego-promoting', 'B: Ego-minimizing'])\n",
        "axes[0].set_title('Distribution of I')\n",
        "axes[0].set_ylabel('I')\n",
        "axes[0].grid(True, alpha=0.3)\n",
        "\n",
        "axes[1].boxplot([eta_A, eta_B], labels=['A', 'B'])\n",
        "axes[1].set_title('Distribution of η')\n",
        "axes[1].set_ylabel('η')\n",
        "axes[1].grid(True, alpha=0.3)\n",
        "\n",
        "axes[2].boxplot([L_A, L_B], labels=['A', 'B'])\n",
        "axes[2].set_title('Distribution of L')\n",
        "axes[2].set_ylabel('L (seconds)')\n",
        "axes[2].grid(True, alpha=0.3)\n",
        "\n",
        "plt.tight_layout()\n",
        "plt.savefig(out_dir / 'ab_experiment_en.png', bbox_inches='tight')\n",
        "print('ab_experiment_en.png saved')\n",
        "fig\n"
      ]
    },
    {
      "cell_type": "code",
      "metadata": {},
      "execution_count": null,
      "outputs": [],
      "source": [
        "\n",
        "# --- Simple parameter fitting demo (beta) ---\n",
        "np.random.seed(123)\n",
        "R_obs = np.linspace(0, 4, 25)\n",
        "beta_true = 0.7\n",
        "params['beta'] = beta_true\n",
        "I_obs = np.array([throughput(params['V'], r) for r in R_obs])\n",
        "# Add observation noise\n",
        "I_obs_noisy = I_obs * (1.0 + 0.05*np.random.randn(I_obs.size))\n",
        "\n",
        "# Grid-search for beta\n",
        "beta_grid = np.linspace(0.2, 1.2, 41)\n",
        "\n",
        "def mse_beta(b):\n",
        "    params['beta'] = b\n",
        "    pred = np.array([throughput(params['V'], r) for r in R_obs])\n",
        "    return ((pred - I_obs_noisy)**2).mean()\n",
        "\n",
        "mse_vals = np.array([mse_beta(b) for b in beta_grid])\n",
        "best_idx = int(np.argmin(mse_vals))\n",
        "beta_hat = float(beta_grid[best_idx])\n",
        "params['beta'] = beta_hat\n",
        "print(f'True beta={beta_true:.3f}, Estimated beta_hat={beta_hat:.3f}')\n",
        "\n",
        "fig, ax = plt.subplots(1, 1, figsize=(5, 3.5))\n",
        "ax.plot(beta_grid, mse_vals, '-o', ms=3)\n",
        "ax.set_title('Objective (MSE) for beta estimation')\n",
        "ax.set_xlabel('beta')\n",
        "ax.set_ylabel('MSE')\n",
        "ax.grid(True, alpha=0.3)\n",
        "plt.tight_layout()\n",
        "plt.savefig(out_dir / 'beta_fit_mse_en.png', bbox_inches='tight')\n",
        "print('beta_fit_mse_en.png saved')\n",
        "fig\n"
      ]
    }
  ]
